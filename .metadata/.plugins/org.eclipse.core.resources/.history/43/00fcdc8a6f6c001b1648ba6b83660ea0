package _java._2LinkedList;

public class Q6_Nth_Node_from_End_of_LL {

	public static void main(String[] args) {
		Node head = new Node(0);
		head.next = new Node(1);
		head.next.next = new Node(2);
		head.next.next.next = new Node(3);
		head.next.next.next.next = new Node(4);
		head.next.next.next.next.next = new Node(5);
		head.next.next.next.next.next.next = new Node(6);
		head.next.next.next.next.next.next = new Node(6);
		
		
		Node nth = end_simple(head, 4);
//		Node nth = end_optmize(head);
		
		while(head != null) {
			System.out.print(head.data + "->");
			head = head.next;
		}
	}
	
	private static Node end_optmize(Node head) {
		return null;
	}

	public static Node end_simple(Node head, int n) {
		Node temp = head;
		int len = 0;
		while(temp!=null) {
			len++;
			temp = temp.next;
		}
		
		temp = head;
		
		for(int i=0; i<len - n; i++)
			temp = temp.next;
		
		System.out.println(temp.data);
		return null;
	}
	
	static class Node{
		int data;
		Node next;
		
		public Node(int data) {
			this.data = data;
		}
	}

}
