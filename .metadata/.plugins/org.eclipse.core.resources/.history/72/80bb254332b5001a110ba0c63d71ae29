package _java.__Collection_FramWork._5Tree;
import java.util.Scanner;

public class _1BinaryTree {
	Node root;
	
	Scanner sc = new Scanner(System.in); 

	public Node create() {
		
		int x;
		
		if(root == null) {
			System.out.println("Enter the Root Value {-1 to enter Null Value}");
			x = sc.nextInt();
		
			if(x == -1) {
				root.data = -100;
			}
			else {
				System.out.println(root);
				root.data = x;
				System.out.println("112");
				System.out.println("Enter left Node of " + x);
				root.left = create();
				System.out.println("Enter right Node of " + x);
				root.right = create();
			
			}
			return root;
		}
		
		Node newNode = null;
		
		System.out.println("Enter the Node Value {-1 to enter Null Value}: ");
		x = sc.nextInt();
		System.out.println();
		
		if(x == -1) {
			return null;
		}
		
		newNode.data = x;
		
		System.out.println("Enter left Node of " + x);
		newNode.left = create();
		System.out.println("Enter right Node of " + x);
		newNode.right = create();
		
		return newNode;
		
	}
	
	
	
// Node Class
	public static class Node {
		int data;
		Node left, right;
		
		public Node(int data) {
			this.data = data;
			this.left = this.right = null;
		}
	}
}
