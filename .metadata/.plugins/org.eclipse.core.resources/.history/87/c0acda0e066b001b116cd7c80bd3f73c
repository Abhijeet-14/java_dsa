package _java._6Sorting;

public class C3_Selection_Sort {

	public static void main(String[] args) {
		int arr[] = { 10, 5, 8, 20, 2, 18 };

		int n = arr.length;

		// Insertion Sort:
		for (int i = 1; i < n; i++) {
			int j = i-1;
			int key = arr[i];
			while(j>=0 && arr[j]<key) {
				arr[j+1] = arr[j];
				j--;
			}
			
			arr[j+1] = key; 
		}

		System.out.println("SELECTION SORT: O(N^2): \n");

		for (int val : arr)
			System.out.print(val + " ");
	}
}
